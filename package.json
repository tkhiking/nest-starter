{
  "name": "nest-starter",
  "version": "0.1.0",
  "description": "Nest starter repository",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "eslint ./src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -f src/config/ormconfig.postgres.ts -n",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -f src/config/ormconfig.postgres.ts",
    "schema:log": "ts-node ./node_modules/typeorm/cli.js schema:log -f src/config/ormconfig.postgres.ts",
    "doc": "compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.0",
    "@nestjs/common": "^6.0.4",
    "@nestjs/core": "^6.0.4",
    "@nestjs/graphql": "^6.0.5",
    "@nestjs/jwt": "^6.1.0",
    "@nestjs/microservices": "^6.0.4",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.4",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/terminus": "^6.1.4",
    "@nestjs/typeorm": "^6.1.0",
    "@nestjs/websockets": "^6.0.4",
    "apollo-server-express": "^2.5.0",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.2",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "graphql": "^14.3.0",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.18.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-mock-strategy": "^2.0.0",
    "pg": "^7.11.0",
    "pluralize": "^7.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "sqlite3": "^4.0.8",
    "swagger-ui-express": "^4.0.2",
    "type-graphql": "^0.17.4",
    "typeorm": "^0.2.17"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@nestjs/testing": "6.1.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "jest": "24.7.1",
    "nodemon": "1.18.11",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
