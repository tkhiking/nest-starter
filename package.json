{
  "name": "nestjs-starter",
  "version": "0.1.0",
  "description": "NestJS starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -f src/config/ormconfig.postgres.ts -n",
    "migration:show": "ts-node ./node_modules/typeorm/cli.js migration:show -f src/config/ormconfig.postgres.ts",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -f src/config/ormconfig.postgres.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -f src/config/ormconfig.postgres.ts",
    "schema:log": "ts-node ./node_modules/typeorm/cli.js schema:log -f src/config/ormconfig.postgres.ts",
    "doc": "compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@godaddy/terminus": "4.3.1",
    "@nestjs/common": "6.11.4",
    "@nestjs/core": "6.11.4",
    "@nestjs/graphql": "6.5.3",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/microservices": "6.11.4",
    "@nestjs/passport": "6.1.1",
    "@nestjs/platform-express": "6.11.4",
    "@nestjs/swagger": "4.2.3",
    "@nestjs/terminus": "6.5.5",
    "@nestjs/typeorm": "6.2.0",
    "@nestjs/websockets": "6.11.4",
    "apollo-server-express": "2.9.16",
    "bcrypt": "3.0.7",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.0",
    "compression": "1.7.4",
    "graphql": "14.6.0",
    "graphql-tools": "4.0.6",
    "helmet": "3.21.2",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-mock-strategy": "2.0.0",
    "pg": "7.17.1",
    "pluralize": "8.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.1",
    "rxjs": "6.5.4",
    "sqlite3": "4.1.1",
    "swagger-ui-express": "4.1.3",
    "type-graphql": "0.17.6",
    "typeorm": "0.2.22"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.11",
    "@nestjs/cli": "6.14.1",
    "@nestjs/schematics": "6.9.1",
    "@nestjs/testing": "6.11.4",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.0",
    "@types/node": "13.5.1",
    "@types/passport-jwt": "3.0.3",
    "@types/pluralize": "0.0.29",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.18.0",
    "@typescript-eslint/parser": "2.18.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.0.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
